{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "name": "functions",
      "host": "localhost",
      "port": 5001
    },
    "firestore": {
      "name": "firestore",
      "host": "localhost",
      "port": 8080,
      "rules": "firestore/firestore.stable.rules"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
